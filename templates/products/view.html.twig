{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-center mb-10 mt-10">
        <div class="flex flex-col md:flex-row md:max-w-6xl rounded-lg bg-white shadow-lg">
            <div class="view-product">
                <img src="{{ product.image }}" alt=""/>
            </div>
            <img class=" w-full h-96 md:h-auto object-cover md:w-96 rounded-t-lg md:rounded-none md:rounded-l-lg "
                 src="{{ product.image }}"/>
            <div class="p-6 flex flex-col justify-start">
                <h5 class="text-gray-900 text-xl font-sans mb-2" id="me"><b>{{ product.name }}</b></h5>
                <p class="text-gray-900 text-ms font-sans mb-2"><b>Код товара: {{ product.code }}</b></p>
                <p class="text-gray-900 text-ms font-sans mb-2 "><b>Цена: {{ product.price }} ₽</b></p>
                {% if is_granted('ROLE_USER') %}
                    <div class="flex justify-between items-center pb-2 mt-10 mb-5">
                        <a href="#"
                           class="px-4 py-2 font-sans bg-zinc-300 hover:bg-zinc-400 text-center text-sm text-black rounded duration-300 add-to-cart"
                           data-id="{{ product.id }}">
                            В корзину</a>
                    </div>
                {% endif %}
                <h5><b>Описание</b></h5>
                {{ product.description }}
            </div>
        </div>
    </div>
{% endblock %}