{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-center mt-10 mb-10">
        <div class="flex flex-col rounded-lg bg-zinc-100 shadow-lg">
            <div class="p-6 flex flex-col justify-start">
                <div class="mt-5 text-center text-xl">
                    <button class="bg-zinc-300 text-xl hover:bg-zinc-400 text-black py-2 px-4 rounded mb-5">
                        <a href="/admin/product"> &#8592; Назад</a>
                    </button>
                    <h4 class="text-xl font-sans mb-2">Добавить новый товар</h4>
                    {% if errors|length > 0 %}
                        <ul>
                            {% for error in errors %}
                                <li> - {{ error }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                    <div class="col-lg-4">
                        <div class="login-form">
                            <form action="#" method="post" enctype="multipart/form-data">
                                <p class="mb-2 mt-2 font-sans text-base">Название товара</p>
                                <input type="text" name="name" class="border border-2 border-black rounded py-1 px-2" value="">
                                <p class="mb-2 mt-2 font-sans text-base">Артикул</p>
                                <input type="text" name="code" class="border border-2 border-black rounded py-1 px-2" value="">
                                <p class="mb-2 mt-2 font-sans text-base">Стоимость, ₽</p>
                                <input type="text" name="price" class="border border-2 border-black rounded py-1 px-2" value="">
                                <p class="mb-2 mt-2 font-sans text-base">Изображение товара</p>
                                <input type="file" name="image" class="border border-2 border-black rounded py-1 px-2" value=""><br>
                                <p class="mb-2 mt-2 font-sans text-base">Сюжет</p>
                                <textarea name="description" class="border border-2 border-black rounded py-1 px-2"></textarea><br>
                                <input type="submit" name="submit" class="bg-zinc-300 text-xl hover:bg-zinc-400 text-black py-2 px-4 rounded mb-5" value="Сохранить">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}