{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen ">
        <div class="px-8 py-6 mx-4 mt-4 text-left bg-zinc-300 shadow-lg md:w-1/3 lg:w-1/3 sm:w-1/3">
            <h3 class="text-xl text-black font-bold text-center">Присоединяйтесь к нам</h3>
            {% if errors|length > 0 %}
                <ul>
                    {% for error in errors %}
                        <li class="text-black"> - {{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
            <form action="{{ path('app_register') }}" method="post">
                <div class="mt-4">
                    <div>
                        <label class="block" for="name">Имя</label>
                        <input type="text" placeholder="Имя" id="name" name="name"
                               class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none border-black  text-black"/>
                    </div>
                    <div class="mt-4">
                        <label class="block" for="email">Email</label>
                        <input type="email" placeholder="Email" id="email" name="email"
                               class="w-full px-4 py-2 mt-2 border border-black  rounded-md focus:outline-none  text-black"/>
                    </div>
                    <div class="mt-4">
                        <label for="pass" class="block">Пароль</label>
                        <input type="password" placeholder="Пароль" id="pass" name="password"
                               class="w-full px-4 py-2 mt-2 border border-black rounded-md focus:outline-none"/>
                    </div>
                    <div class="flex">
                        <button name="submit" type="submit"
                                class=" px-7 py-3 border border-black  text-sm leading-snug uppercase shadow-md hover:bg-zinc-400 hover:shadow-lg  focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-ou w-full  mt-4 text-black rounded-lg ">
                            Создать аккаунт
                        </button>
                    </div>
                    <div class="mt-6 text-black">
                        У вас уже есть аккаунт?
                        <a class="text-black hover:underline" href="{{ path('app_login') }}">
                            ВХОД
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}