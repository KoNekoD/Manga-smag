{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-center mt-10 mb-10">
        <div class="flex flex-col rounded-lg bg-zinc-100 shadow-lg">
            <div class="p-6 flex flex-col justify-start">
                <div class="text-center">
                    <button class="font-sans bg-zinc-300 text-xl hover:bg-zinc-400 text-black py-2 px-4 rounded  mt-5">
                        <a href="{{ path('app_admin_index') }}">Админ панель</a>
                    </button>
                    <br>
                    <button class="bg-zinc-300 text-xl hover:bg-zinc-400 text-black py-2 px-4 rounded mt-5">
                        <a href="{{ path('app_admin_order_index') }}"> &#8592; Назад</a>
                    </button>
                    <h4 class="text-xl font-sans mb-2">Редактировать заказ #{{ order.id }}</h4>
                    <div class="col-lg-4 font-sans">
                        <div class="login-form">
                            <form action="#" method="post">

                                <p class="mb-2 mt-2 font-sans text-base">Имя клиента</p>
                                <input type="text" name="userName"
                                       class="border-2 border-black rounded py-1 px-2" placeholder=""
                                       value="{{ order.username }}">

                                <p class="mb-2 mt-2 font-sans text-base">Телефон клиента</p>
                                <input type="text" name="userPhone"
                                       class="border-2 border-black rounded py-1 px-2" placeholder=""
                                       value="{{ order.userPhone }}">

                                <p class="mb-2 mt-2 font-sans text-base">Комментарий клиента</p>
                                <input type="text" name="userComment"
                                       class="border-2 border-black rounded py-1 px-2" placeholder=""
                                       value="{{ order.userComment }}">

                                <p class="mb-2 mt-2 font-sans text-base">Дата оформления заказа</p>
                                <input type="text" name="date" class="border-2 border-black rounded py-1 px-2"
                                       placeholder="" value="{{ order.createdAt }}">

                                <p class="mb-2 mt-2 font-sans text-base">Статус</p>
                                <select name="status" class="border-2 border-black rounded py-1 px-2">
                                    <option value="1"
                                            {% if order.status is 1 %} selected="selected"{% endif %}
                                    >Новый заказ
                                    </option>
                                    <option value="2"
                                            {% if order.status is 2 %} selected="selected"{% endif %}
                                    >В обработке
                                    </option>
                                    <option value="3"
                                            {% if order.status is 3 %} selected="selected"{% endif %}
                                    >Доставляется
                                    </option>
                                    <option value="4"
                                            {% if order.status is 4 %} selected="selected"{% endif %}
                                    >Закрыт
                                    </option>
                                </select>
                                <br>
                                <br>
                                <input type="submit" name="submit"
                                       class="bg-zinc-300 text-xl hover:bg-zinc-400 text-black py-2 px-4 rounded mb-5"
                                       value="Сохранить">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}